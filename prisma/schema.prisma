generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?
  plan          Plan      @default(FREE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  studySets     StudySet[]
  solveHistory  SolveLog[]
  sessions      Session[]
  accounts      Account[]
  progress      UserProgress[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Plan {
  FREE
  PRO
}

model StudySet {
  id           String       @id @default(cuid())
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String
  subject      String?
  description  String?
  sourceType   SourceType
  sourceUrl    String?
  sourceText   String?
  isPublic     Boolean      @default(false)
  tags         String[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  flashcards   Flashcard[]
  quizzes      Quiz[]
  notes        Note[]
  podcasts     Podcast[]
  progress     UserProgress[]
}

enum SourceType {
  PDF
  TEXT
  YOUTUBE
  AUDIO
  IMAGE
  LINK
  MANUAL
}

model Flashcard {
  id          String         @id @default(cuid())
  studySetId  String
  studySet    StudySet       @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  front       String
  back        String
  mastery     MasteryLevel   @default(UNFAMILIAR)
  position    Int
  createdAt   DateTime       @default(now())
}

model Quiz {
  id          String       @id @default(cuid())
  studySetId  String
  studySet    StudySet     @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  type        QuizType
  question    String
  options     String[]
  answer      String
  explanation String?
  mastery     MasteryLevel @default(UNFAMILIAR)
  position    Int
}

enum QuizType {
  MULTIPLE_CHOICE
  FILL_IN_BLANK
  WRITTEN
  TRUE_FALSE
}

enum MasteryLevel {
  UNFAMILIAR
  LEARNING
  FAMILIAR
  MASTERED
}

model Note {
  id         String   @id @default(cuid())
  studySetId String
  studySet   StudySet @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  content    String
  createdAt  DateTime @default(now())
}

model Podcast {
  id         String   @id @default(cuid())
  studySetId String
  studySet   StudySet @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  audioUrl   String
  transcript String
  createdAt  DateTime @default(now())
}

model UserProgress {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  studySetId  String
  studySet    StudySet  @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  score       Float     @default(0)
  totalItems  Int
  mastered    Int       @default(0)
  familiar    Int       @default(0)
  learning    Int       @default(0)
  unfamiliar  Int       @default(0)
  lastStudied DateTime  @default(now())
  nextReview  DateTime?

  @@unique([userId, studySetId])
}

model SolveLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageUrl  String?
  question  String
  answer    String
  createdAt DateTime @default(now())
}
